{
    "name": "alibaba-cloud",
    "type": "command",
    "default_settings": {
        "region": "cn-hangzhou",
        "zone": "cn-hangzhou-b",
        "instance_type": "ecs.g6.large",
        "image_id": "ubuntu_20_04_x64_20G_alibase_20211012.vhd",
        "security_group": "sg-default",
        "volume_type": "cloud_essd",
        "internet_max_bandwidth_out": "5"
    },
    "actions": {
        "test_install": {
            "command": "aliyun --version",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "version": {
                        "regex": "([0-9.]+)",
                        "group": 1
                    }
                }
            }
        },
        "list_workers": {
            "command": "aliyun ecs DescribeInstances --RegionId {region} --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instances": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_worker": {
            "command": "aliyun ecs CreateInstance --RegionId {region} --ZoneId {zone} --ImageId {image_id} --InstanceType {worker_type} --SecurityGroupId {security_group} --InstanceName {name} --InternetMaxBandwidthOut {internet_max_bandwidth_out} --KeyPairName {ssh_key_name} --output json",
            "params": [
                "region",
                "zone",
                "image_id",
                "worker_type",
                "security_group",
                "name",
                "ssh_key_name"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance_id": {
                        "regex": "\"InstanceId\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        },
        "start_worker": {
            "command": "aliyun ecs StartInstance --InstanceId {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "stop_worker": {
            "command": "aliyun ecs StopInstance --InstanceId {worker_id} --ForceStop {force} --output json",
            "params": [
                "worker_id"
            ],
            "default_settings": {
                "force": "false"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "reboot_worker": {
            "command": "aliyun ecs RebootInstance --InstanceId {worker_id} --ForceStop {force} --output json",
            "params": [
                "worker_id"
            ],
            "default_settings": {
                "force": "false"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_worker": {
            "command": "aliyun ecs DeleteInstance --InstanceId {worker_id} --Force {force} --output json",
            "params": [
                "worker_id"
            ],
            "default_settings": {
                "force": "true"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "get_worker": {
            "command": "aliyun ecs DescribeInstances --RegionId {region} --InstanceIds '['{worker_id}']' --output json",
            "params": [
                "region",
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_regions": {
            "command": "aliyun ecs DescribeRegions --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "regions": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_regions": {
            "command": "aliyun ecs DescribeZones --RegionId {region} --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "zones": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_worker_types": {
            "command": "aliyun ecs DescribeInstanceTypes --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance_types": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_images": {
            "command": "aliyun ecs DescribeImages --RegionId {region} --ImageOwnerAlias system --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "images": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_volume": {
            "command": "aliyun ecs CreateDisk --RegionId {region} --ZoneId {zone} --DiskName {disk_name} --DiskCategory {disk_type} --Size {size_gb} --output json",
            "params": [
                "region",
                "zone",
                "disk_name",
                "disk_type",
                "size_gb"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "disk_id": {
                        "regex": "\"DiskId\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        },
        "list_volumes": {
            "command": "aliyun ecs DescribeDisks --RegionId {region} --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "disks": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_volume": {
            "command": "aliyun ecs DeleteDisk --DiskId {disk_id} --output json",
            "params": [
                "disk_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "attach_volume": {
            "command": "aliyun ecs AttachDisk --InstanceId {worker_id} --DiskId {disk_id} --DeleteWithInstance {auto_delete} --output json",
            "params": [
                "worker_id",
                "disk_id"
            ],
            "default_settings": {
                "auto_delete": "false"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "detach_volume": {
            "command": "aliyun ecs DetachDisk --InstanceId {worker_id} --DiskId {disk_id} --output json",
            "params": [
                "worker_id",
                "disk_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "resize_volume": {
            "command": "aliyun ecs ResizeDisk --DiskId {disk_id} --NewSize {size_gb} --output json",
            "params": [
                "disk_id",
                "size_gb"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "resize_worker": {
            "command": "aliyun ecs ModifyInstanceSpec --InstanceId {worker_id} --InstanceType {worker_type} --output json",
            "params": [
                "worker_id",
                "worker_type"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_security_groups": {
            "command": "aliyun ecs DescribeSecurityGroups --RegionId {region} --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "security_groups": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_security_group": {
            "command": "aliyun ecs CreateSecurityGroup --RegionId {region} --SecurityGroupName {name} --output json",
            "params": [
                "region",
                "name"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "security_group_id": {
                        "regex": "\"SecurityGroupId\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        },
        "create_firewall_rule": {
            "command": "aliyun ecs AuthorizeSecurityGroup --RegionId {region} --SecurityGroupId {security_group_id} --IpProtocol {protocol} --PortRange {port} --SourceCidrIp {source} --output json",
            "params": [
                "region",
                "security_group_id",
                "protocol",
                "port",
                "source"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_snapshot": {
            "command": "aliyun ecs CreateSnapshot --DiskId {disk_id} --SnapshotName {snapshot_name} --Description {description} --output json",
            "params": [
                "disk_id",
                "snapshot_name",
                "description"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "snapshot_id": {
                        "regex": "\"SnapshotId\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        },
        "list_snapshots": {
            "command": "aliyun ecs DescribeSnapshots --RegionId {region} --output json",
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "snapshots": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_snapshot": {
            "command": "aliyun ecs DeleteSnapshot --SnapshotId {snapshot_id} --output json",
            "params": [
                "snapshot_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        }
    }
}