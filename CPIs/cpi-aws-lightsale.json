{
    "name": "aws-lightsail",
    "type": "command",
    "default_settings": {
        "region": "us-east-1",
        "availability_zone": "us-east-1a",
        "bundle_id": "small_2_0",
        "blueprint_id": "ubuntu_20_04",
        "key_pair_name": "default",
        "tags": ""
    },
    "actions": {
        "test_install": {
            "target": {
                "Command": {
                    "command": "aws --version",
                    "in_vm": false
                }
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "version": {
                        "regex": "aws-cli/([0-9.]+)",
                        "group": 1
                    }
                }
            }
        },
        "list_workers": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-instances --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instances": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail create-instances --instance-names {name} --availability-zone {availability_zone} --blueprint-id {blueprint_id} --bundle-id {bundle_id} --key-pair-name {key_pair_name} {tags_param} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "name",
                "availability_zone",
                "blueprint_id",
                "bundle_id",
                "key_pair_name",
                "region"
            ],
            "default_settings": {
                "tags_param": ""
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail delete-instance --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "get_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-instance --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "reboot_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail reboot-instance --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "stop_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail stop-instance --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "start_worker": {
            "target": {
                "Command": {
                    "command": "aws lightsail start-instance --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_regions": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-regions --include-availability-zones --output json",
                    "in_vm": false
                }
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "regions": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_worker_types": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-bundles --include-inactive false --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "bundles": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_images": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-blueprints --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "blueprints": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_volumes": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-disks --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "disks": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_volume": {
            "target": {
                "Command": {
                    "command": "aws lightsail create-disk --disk-name {disk_name} --size-in-gb {size_gb} --availability-zone {availability_zone} {tags_param} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "disk_name",
                "size_gb",
                "availability_zone",
                "region"
            ],
            "default_settings": {
                "tags_param": ""
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_volume": {
            "target": {
                "Command": {
                    "command": "aws lightsail delete-disk --disk-name {disk_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "disk_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "attach_volume": {
            "target": {
                "Command": {
                    "command": "aws lightsail attach-disk --disk-name {disk_id} --instance-name {worker_id} --disk-path /dev/xvdf --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "disk_id",
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "detach_volume": {
            "target": {
                "Command": {
                    "command": "aws lightsail detach-disk --disk-name {disk_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "disk_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_security_groups": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-instance-port-states --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "port_states": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_firewall_rule": {
            "target": {
                "Command": {
                    "command": "aws lightsail open-instance-public-ports --port-info fromPort={port},toPort={port},protocol={protocol} --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "port",
                "protocol",
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_firewall_rule": {
            "target": {
                "Command": {
                    "command": "aws lightsail close-instance-public-ports --port-info fromPort={port},toPort={port},protocol={protocol} --instance-name {worker_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "port",
                "protocol",
                "worker_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_snapshot": {
            "target": {
                "Command": {
                    "command": "aws lightsail create-instance-snapshot --instance-name {worker_id} --instance-snapshot-name {snapshot_name} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "worker_id",
                "snapshot_name",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_snapshots": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-instance-snapshots --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance_snapshots": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_snapshot": {
            "target": {
                "Command": {
                    "command": "aws lightsail delete-instance-snapshot --instance-snapshot-name {snapshot_id} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "snapshot_id",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_ssh_key": {
            "target": {
                "Command": {
                    "command": "aws lightsail import-key-pair --key-pair-name {name} --public-key-base64 $(echo {ssh_public_key} | base64) --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "name",
                "ssh_public_key",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_ssh_keys": {
            "target": {
                "Command": {
                    "command": "aws lightsail get-key-pairs --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "key_pairs": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_ssh_key": {
            "target": {
                "Command": {
                    "command": "aws lightsail delete-key-pair --key-pair-name {ssh_key_name} --region {region} --output json",
                    "in_vm": false
                }
            },
            "params": [
                "ssh_key_name",
                "region"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "operations": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        }
    }
}