{
    "name": "proxmox",
    "type": "command",
    "default_settings": {
      "node": "pve",
      "storage": "local",
      "memory_mb": "2048",
      "cpus": "2",
      "disk_size_gb": "32",
      "image_format": "qcow2",
      "network_bridge": "vmbr0",
      "template_volume": "local",
      "netif": "virtio"
    },
    "actions": {
      "test_install": {
        "command": "pvesh version",
        "params": [],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "version": {
              "regex": "proxmox-ve:([\\d\\.]+)",
              "group": 1
            }
          }
        }
      },
      "list_workers": {
        "command": "pvesh get /cluster/resources --type vm",
        "params": [],
        "parse_rules": {
          "type": "array",
          "separator": "\\n",
          "patterns": {
            "id": {
              "regex": "\"id\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "name": {
              "regex": "\"name\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "status": {
              "regex": "\"status\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "node": {
              "regex": "\"node\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "type": {
              "regex": "\"type\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "create_worker": {
        "command": "pvesh create /nodes/{node}/qemu -vmid {vmid} -name {vm_name} -memory {memory_mb} -cores {cpus} -net0 {netif},bridge={network_bridge} -virtio0 {storage}:{disk_size_gb}",
        "params": [
          "node",
          "vmid",
          "vm_name",
          "memory_mb",
          "cpus",
          "netif",
          "network_bridge",
          "storage",
          "disk_size_gb"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "delete_worker": {
        "command": "pvesh delete /nodes/{node}/qemu/{vmid}",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "start_worker": {
        "command": "pvesh create /nodes/{node}/qemu/{vmid}/status/start",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "stop_worker": {
        "command": "pvesh create /nodes/{node}/qemu/{vmid}/status/stop",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "get_worker": {
        "command": "pvesh get /nodes/{node}/qemu/{vmid}/config",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "properties",
          "patterns": {
            "name": {
              "regex": "\"name\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "memory": {
              "regex": "\"memory\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            },
            "cores": {
              "regex": "\"cores\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            },
            "sockets": {
              "regex": "\"sockets\":\\s*(\\d+)",
              "group": 1,
              "transform": "number",
              "optional": true
            },
            "bootdisk": {
              "regex": "\"bootdisk\":\\s*\"([^\"]+)\"",
              "group": 1,
              "optional": true
            },
            "ostype": {
              "regex": "\"ostype\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "create_snapshot": {
        "command": "pvesh create /nodes/{node}/qemu/{vmid}/snapshot -snapname {snapshot_name} -description {snapshot_description}",
        "params": [
          "node",
          "vmid",
          "snapshot_name",
          "snapshot_description"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "list_snapshots": {
        "command": "pvesh get /nodes/{node}/qemu/{vmid}/snapshot",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "array",
          "separator": "\\n",
          "patterns": {
            "name": {
              "regex": "\"name\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "description": {
              "regex": "\"description\":\\s*\"([^\"]+)\"",
              "group": 1,
              "optional": true
            },
            "snaptime": {
              "regex": "\"snaptime\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            },
            "parent": {
              "regex": "\"parent\":\\s*\"([^\"]+)\"",
              "group": 1,
              "optional": true
            }
          }
        }
      },
      "restore_snapshot": {
        "command": "pvesh create /nodes/{node}/qemu/{vmid}/snapshot/{snapshot_name}/rollback",
        "params": [
          "node",
          "vmid",
          "snapshot_name"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "delete_snapshot": {
        "command": "pvesh delete /nodes/{node}/qemu/{vmid}/snapshot/{snapshot_name}",
        "params": [
          "node",
          "vmid",
          "snapshot_name"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "resize_volume": {
        "command": "pvesh set /nodes/{node}/qemu/{vmid}/resize -disk {disk} -size {size_gb}G",
        "params": [
          "node",
          "vmid",
          "disk",
          "size_gb"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "clone_worker": {
        "command": "pvesh create /nodes/{node}/qemu/{vmid}/clone -newid {new_workerid} -name {new_worker_name} -full {full_clone}",
        "params": [
          "node",
          "vmid",
          "new_workerid",
          "new_worker_name",
          "full_clone"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "success": {
              "regex": ".*",
              "transform": "boolean"
            }
          }
        }
      },
      "get_worker_status": {
        "command": "pvesh get /nodes/{node}/qemu/{vmid}/status/current",
        "params": [
          "node",
          "vmid"
        ],
        "parse_rules": {
          "type": "properties",
          "patterns": {
            "status": {
              "regex": "\"status\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "cpus": {
              "regex": "\"cpus\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            },
            "running_worker": {
              "regex": "\"running-machine\":\\s*\"([^\"]+)\"",
              "group": 1,
              "optional": true
            },
            "running_qemu": {
              "regex": "\"running-qemu\":\\s*\"([^\"]+)\"",
              "group": 1,
              "optional": true
            }
          }
        }
      },
      "list_volume": {
        "command": "pvesh get /nodes/{node}/storage",
        "params": [
          "node"
        ],
        "parse_rules": {
          "type": "array",
          "separator": "\\n",
          "patterns": {
            "storage": {
              "regex": "\"storage\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "type": {
              "regex": "\"type\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "active": {
              "regex": "\"active\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            },
            "content": {
              "regex": "\"content\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "shared": {
              "regex": "\"shared\":\\s*(\\d+)",
              "group": 1,
              "transform": "number"
            }
          }
        }
      }
    }
  }