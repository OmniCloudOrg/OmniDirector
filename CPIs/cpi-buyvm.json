{
    "name": "buyvm",
    "type": "command",
    "default_settings": {
      "location": "nj",
      "plan": "ssd-1024",
      "os": "ubuntu-20.04",
      "hostname": "buyvm-server",
      "enable_ipv6": "true",
      "disk_size": "30"
    },
    "actions": {
      "test_install": {
        "command": "buyvm version",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "version": {
              "regex": "([0-9.]+)",
              "group": 1
            }
          }
        }
      },
      "list_workers": {
        "command": "buyvm vm list --format json",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "vms": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "create_worker": {
        "command": "buyvm vm create --location {location} --plan {worker_type} --os {image} --hostname {name} --ssh-key {ssh_key_id} --ipv6 {enable_ipv6} --format json",
        "params": [
          "location",
          "worker_type",
          "image",
          "name",
          "ssh_key_id",
          "enable_ipv6"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "vm_id": {
              "regex": "\"vm_id\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "hostname": {
              "regex": "\"hostname\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "ipv4": {
              "regex": "\"ipv4\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "status": {
              "regex": "\"status\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "delete_worker": {
        "command": "buyvm vm delete {worker_id} --confirm --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "get_worker": {
        "command": "buyvm vm info {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "vm": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "start_worker": {
        "command": "buyvm vm start {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "stop_worker": {
        "command": "buyvm vm stop {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "reboot_worker": {
        "command": "buyvm vm reboot {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "list_locations": {
        "command": "buyvm location list --format json",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "locations": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "list_plans": {
        "command": "buyvm plan list --location {location} --format json",
        "params": ["location"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "plans": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "list_os": {
        "command": "buyvm os list --format json",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "operating_systems": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "create_snapshot": {
        "command": "buyvm vm snapshot create {worker_id} --name {snapshot_name} --format json",
        "params": [
          "worker_id",
          "snapshot_name"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "snapshot_id": {
              "regex": "\"snapshot_id\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "list_snapshots": {
        "command": "buyvm vm snapshot list {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "snapshots": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "restore_snapshot": {
        "command": "buyvm vm snapshot restore {worker_id} --snapshot {snapshot_id} --format json",
        "params": [
          "worker_id",
          "snapshot_id"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "delete_snapshot": {
        "command": "buyvm vm snapshot delete {worker_id} --snapshot {snapshot_id} --format json",
        "params": [
          "worker_id",
          "snapshot_id"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "create_ssh_key": {
        "command": "buyvm ssh-key add --name {name} --public-key \"{ssh_public_key}\" --format json",
        "params": [
          "name",
          "ssh_public_key"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "key_id": {
              "regex": "\"key_id\":\\s*\"([^\"]+)\"",
              "group": 1
            },
            "name": {
              "regex": "\"name\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "list_ssh_keys": {
        "command": "buyvm ssh-key list --format json",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "keys": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "delete_ssh_key": {
        "command": "buyvm ssh-key delete {ssh_key_id} --format json",
        "params": ["ssh_key_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "reinstall_os": {
        "command": "buyvm vm reinstall {worker_id} --os {image} --format json",
        "params": [
          "worker_id",
          "image"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "resize_worker": {
        "command": "buyvm vm resize {worker_id} --plan {worker_type} --format json",
        "params": [
          "worker_id",
          "worker_type"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "get_console": {
        "command": "buyvm vm console {worker_id} --format json",
        "params": ["worker_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "console_url": {
              "regex": "\"console_url\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "list_block_volume": {
        "command": "buyvm storage list --format json",
        "parse_rules": {
          "type": "object",
          "patterns": {
            "volumes": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "create_block_volume": {
        "command": "buyvm storage create --location {location} --size {size_gb} --format json",
        "params": [
          "location",
          "size_gb"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "volume_id": {
              "regex": "\"volume_id\":\\s*\"([^\"]+)\"",
              "group": 1
            }
          }
        }
      },
      "attach_block_volume": {
        "command": "buyvm storage attach {disk_id} --vm {worker_id} --format json",
        "params": [
          "disk_id",
          "worker_id"
        ],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "detach_block_volume": {
        "command": "buyvm storage detach {disk_id} --format json",
        "params": ["disk_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      },
      "delete_block_volume": {
        "command": "buyvm storage delete {disk_id} --confirm --format json",
        "params": ["disk_id"],
        "parse_rules": {
          "type": "object",
          "patterns": {
            "result": {
              "regex": "(.*)",
              "group": 1
            }
          }
        }
      }
    }
  }