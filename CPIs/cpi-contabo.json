{
    "name": "contabo",
    "type": "command",
    "default_settings": {
        "region": "EU",
        "plan": "vps-s",
        "image": "ubuntu-20.04",
        "hostname": "contabo-vps",
        "period": "monthly",
        "disk_type": "ssd"
    },
    "actions": {
        "test_install": {
            "command": "contabo --version",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "version": {
                        "regex": "([0-9.]+)",
                        "group": 1
                    }
                }
            }
        },
        "list_workers": {
            "command": "contabo compute instance list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instances": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_worker": {
            "command": "contabo compute instance create --name {name} --product-id {worker_type} --region {region} --image {image} --ssh-keys {ssh_key_id} --period {period} --output json",
            "params": [
                "name",
                "worker_type",
                "region",
                "image",
                "ssh_key_id",
                "period"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance_id": {
                        "regex": "\"instanceId\":\\s*([0-9]+)",
                        "group": 1,
                        "transform": "number"
                    },
                    "status": {
                        "regex": "\"status\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        },
        "delete_worker": {
            "command": "contabo compute instance delete {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "get_worker": {
            "command": "contabo compute instance show {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "instance": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "start_worker": {
            "command": "contabo compute instance start {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "stop_worker": {
            "command": "contabo compute instance stop {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "reboot_worker": {
            "command": "contabo compute instance restart {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_regions": {
            "command": "contabo compute region list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "regions": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_worker_types": {
            "command": "contabo compute product list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "products": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_images": {
            "command": "contabo compute image list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "images": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_snapshot": {
            "command": "contabo compute snapshot create --instance-id {worker_id} --name {snapshot_name} --description {description} --output json",
            "params": [
                "worker_id",
                "snapshot_name",
                "description"
            ],
            "default_settings": {
                "description": "Snapshot created via CPI"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "snapshot_id": {
                        "regex": "\"snapshotId\":\\s*([0-9]+)",
                        "group": 1,
                        "transform": "number"
                    }
                }
            }
        },
        "list_snapshots": {
            "command": "contabo compute snapshot list --instance-id {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "snapshots": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "restore_snapshot": {
            "command": "contabo compute snapshot restore --snapshot-id {snapshot_id} --output json",
            "params": [
                "snapshot_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_snapshot": {
            "command": "contabo compute snapshot delete {snapshot_id} --output json",
            "params": [
                "snapshot_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_ssh_key": {
            "command": "contabo compute ssh-key create --name {name} --public-key \"{ssh_public_key}\" --output json",
            "params": [
                "name",
                "ssh_public_key"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "ssh_key_id": {
                        "regex": "\"sshKeyId\":\\s*([0-9]+)",
                        "group": 1,
                        "transform": "number"
                    }
                }
            }
        },
        "list_ssh_keys": {
            "command": "contabo compute ssh-key list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "ssh_keys": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "delete_ssh_key": {
            "command": "contabo compute ssh-key delete {ssh_key_id} --output json",
            "params": [
                "ssh_key_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "reinstall_worker": {
            "command": "contabo compute instance reinstall {worker_id} --image {image} --ssh-keys {ssh_key_id} --output json",
            "params": [
                "worker_id",
                "image",
                "ssh_key_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "resize_worker": {
            "command": "contabo compute instance upgrade {worker_id} --product-id {worker_type} --output json",
            "params": [
                "worker_id",
                "worker_type"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "list_firewalls": {
            "command": "contabo compute firewall list --output json",
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "firewalls": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "create_firewall": {
            "command": "contabo compute firewall create --name {name} --description {description} --output json",
            "params": [
                "name",
                "description"
            ],
            "default_settings": {
                "description": "Firewall created via CPI"
            },
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "firewall_id": {
                        "regex": "\"firewallId\":\\s*([0-9]+)",
                        "group": 1,
                        "transform": "number"
                    }
                }
            }
        },
        "add_firewall_rule": {
            "command": "contabo compute firewall rule create --firewall-id {security_group_id} --protocol {protocol} --port {port} --source {source} --direction {direction} --action allow --output json",
            "params": [
                "security_group_id",
                "protocol",
                "port",
                "source",
                "direction"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "rule_id": {
                        "regex": "\"ruleId\":\\s*([0-9]+)",
                        "group": 1,
                        "transform": "number"
                    }
                }
            }
        },
        "assign_firewall": {
            "command": "contabo compute firewall assign --firewall-id {security_group_id} --instance-id {worker_id} --output json",
            "params": [
                "security_group_id",
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "result": {
                        "regex": "(.*)",
                        "group": 1
                    }
                }
            }
        },
        "get_console": {
            "command": "contabo compute instance console {worker_id} --output json",
            "params": [
                "worker_id"
            ],
            "parse_rules": {
                "type": "object",
                "patterns": {
                    "console_url": {
                        "regex": "\"url\":\\s*\"([^\"]+)\"",
                        "group": 1
                    }
                }
            }
        }
    }
}